{
  "version": 3,
  "configurePresets": [
    {
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "MFI_CROSS_COMPILE": {
          "value": true,
          "type": "BOOL"
        }
      },
      "name": "mips-debug",
      "displayName": "MIPS Debug",
      "description": "Cross compile for MIPS Debug",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Unix Makefiles",
      "installDir": "${sourceDir}/install/${presetName}"
    },
    {
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel",
        "MFI_CROSS_COMPILE": {
          "value": true,
          "type": "BOOL"
        }
      },
      "name": "mips-release",
      "displayName": "MIPS Release",
      "description": "Cross compile for MIPS Release",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Unix Makefiles",
      "installDir": "${sourceDir}/install/${presetName}"
    },
    {
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "name": "local-debug",
      "displayName": "Local Debug",
      "description": "Compile for Local Debug",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Unix Makefiles",
      "installDir": "${sourceDir}/install/${presetName}"
    },
    {
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "name": "local-release",
      "displayName": "Local Release",
      "description": "Compile for Local Release",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Unix Makefiles",
      "installDir": "${sourceDir}/install/${presetName}"
    }
  ],
  "buildPresets": [
    {
      "name": "mips-debug",
      "configurePreset": "mips-debug",
      "displayName": "MIPS Debug",
      "description": "MIPS Debug"
    },
    {
      "name": "mips-release",
      "configurePreset": "mips-release",
      "displayName": "MIPS Release",
      "description": "MIPS Release"
    },
    {
      "name": "local-debug",
      "configurePreset": "local-debug",
      "displayName": "Local Debug",
      "description": "Local Debug"
    },
    {
      "name": "local-release",
      "configurePreset": "local-release",
      "displayName": "Local Release",
      "description": "Local Release"
    }
  ]
}
