{
  "version": 3,
  "configurePresets": [
    {
      "name": "mips-config",
      "description": "Configure for cross compile for MIPS",
      "hidden": true,
      "cacheVariables": {
        "MFI_CROSS_COMPILE": {
          "value": true,
          "type": "BOOL"
        },
        "BUILDROOT_BINARY_DIR": "${sourceDir}/build/br"
      },
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Unix Makefiles",
      "installDir": "${sourceDir}/install/${presetName}"
    },
    {
      "name": "mips-debug-config",
      "displayName": "MIPS Debug Configuration",
      "description": "Configure for cross compile for MIPS Debug",
      "inherits": "mips-config",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "mips-release-config",
      "displayName": "MIPS Release Configuration",
      "description": "Configure for cross compile for MIPS Release",
      "inherits": "mips-config",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    },
    {
      "name": "local-config",
      "description": "Configure for compile for Local",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Unix Makefiles",
      "installDir": "${sourceDir}/install/${presetName}"
    },
    {
      "name": "local-debug-config",
      "displayName": "Local Debug Configuration",
      "description": "Configure for compile for Local Debug",
      "inherits": "local-config",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "local-release-config",
      "displayName": "Local Release Configuration",
      "description": "Configure for compile for Local Release",
      "inherits": "local-config",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "mips-debug-build",
      "configurePreset": "mips-debug-config",
      "displayName": "MIPS Debug Build",
      "description": "Build for MIPS Debug"
    },
    {
      "name": "mips-release-build",
      "configurePreset": "mips-release-config",
      "displayName": "MIPS Release Build",
      "description": "Build for MIPS Release"
    },
    {
      "name": "local-debug-build",
      "configurePreset": "local-debug-config",
      "displayName": "Local Debug Build",
      "description": "Build Local Debug"
    },
    {
      "name": "local-release-build",
      "configurePreset": "local-release-config",
      "displayName": "Local Release Build",
      "description": "Build for Local Release"
    }
  ]
}
